{
    "name": "Ticketing",
    "tables": [
        {
            "name": "States",
            "isEnum": true,
            "enumItems": [
                {
                    "key": "New",
                    "value": 1
                },
                {
                    "key": "WaitingForBusinessResponse",
                    "value": 2
                },
                {
                    "key": "WaitingForUserResponse",
                    "value": 3
                },
                {
                    "key": "UnderInvestigation",
                    "value": 4
                },
                {
                    "key": "Closed",
                    "value": 5
                }
            ]
        },
        {
            "name": "Priorities",
            "isEnum": true,
            "enumItems": [
                {
                    "key": "High",
                    "value": 1
                },
                {
                    "key": "Medium",
                    "value": 2
                },
                {
                    "key": "Low",
                    "value": 3
                }
            ]
        },
        {
            "name": "Tickets",
            "columns": [
                {
                    "name": "UserGuid"
                },
                {
                    "name": "Title"
                },
                {
                    "name": "PriorityId"
                },
                {
                    "name": "Date"
                },
                {
                    "name": "StateId"
                }
            ]
        },
        {
            "name": "Posts",
            "columns": [
                {
                    "name": "TicketId"
                },
                {
                    "name": "Date"
                },
                {
                    "name": "IsSystemPost",
                    "type": "boolean",
                    "isNullable": true
                }
            ]
        },
        {
            "name": "PostContents",
            "oneToOneWith": "Posts",
            "columns": [
                {
                    "name": "Content",
                    "type": "longText"
                }
            ]
        },
        {
            "name": "AttachedFiles",
            "columns": [
                {
                    "name": "PostId"
                },
                {
                    "name": "FileGuid"
                },
                {
                    "name": "FileExtension"
                }
            ]
        }
    ],
    "views": [
        {
            "name": "TicketViews",
            "query": [
                "select",
                "    t.Id,",
                "    t.UserGuid,",
                "    u.DisplayName as `User`,",
                "    t.Title,",
                "    t.UtcDate,",
                "    t.PriorityId,",
                "    p.`Key` as PriorityKey,",
                "    t.StateId,",
                "    s.`Key` as StateKey,",
                "    (",
                "        select UtcDate",
                "        from Posts",
                "        where TicketId = t.Id",
                "        order by UtcDate asc",
                "        limit 1",
                "    ) as LatestPostDate",
                "from Tickets t",
                "inner join Priorities p",
                "on t.PriorityId = p.Id",
                "inner join States s",
                "on t.StateId = s.Id",
                "left join Accounts.UserViews u",
                "on t.UserGuid = u.Guid"
            ]
        }
    ]
}