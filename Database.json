                    "name": "PostId"
                },
                {
                    "name": "FileGuid"
                },
                {
                    "name": "FileExtension"
                }
            ]
        }
    ],
    "views": [
        {
            "name": "TicketViews",
            "query": [
                "select ",
                "    Tickets.Id,",
                "    Tickets.UserGuid,",
                "    'User' as `User`,",
                "    Tickets.Title,",
                "    Tickets.`UtcDate`,",
                "    Tickets.PriorityId,",
                "    Priorities.`Key` as PriorityKey,",
                "    Tickets.StateId,",
                "    States.`Key` as StateKey,",
                "    curdate() as LatestPostDate",
                "from Tickets ",
                "inner join Priorities ",
                "on  Priorities.Id= Tickets.PriorityId",
                "inner join States ",
                "on  States.Id= Tickets.StateId"
            ]
        }
    ]
}