                    "name": "Date"
                },
                {
                    "name": "IsSystemPost",
                    "type": "boolean",
                    "isNullable": true
                }
            ]
        },
        {
            "name": "PostHtmls",
            "oneToOneWith": "Posts",
            "columns": [
                {
                    "name": "Html",
                    "type": "longText"
                }
            ]
        },
        {
            "name": "AttachedFiles",
            "columns": [
